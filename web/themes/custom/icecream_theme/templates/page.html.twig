<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
  </head>
  <body class="{{ body_class }}{% if app.request.attributes.get('_route') == 'contact.site_page' %} page-contact{% endif %}">
    {{ attach_library('icecream_theme/global') }}

    <header class="header">
      {% if logo %}
        <a href="{{ path('<front>') }}" class="site-logo">
          <img src="{{ logo }}" alt="{{ 'Home'|t }}" />
        </a>
      {% endif %}
      <button class="menu-toggle" aria-label="Open menu">&#9776;</button>
      <nav class="menu">
        {{ page.header }}
      </nav>
    </header>

    {% if page.hero %}
      <div class="hero">
        {{ page.hero }}
      </div>
    {% endif %}

    <main class="main">
      <div class="content">
        {{ page.content }}
      </div>
      {% if page.sidebar %}
        <div class="sidebar">
          {{ page.sidebar }}
        </div>
      {% endif %}
    </main>

    <div id="footer">
      {{ page.footer }}
    </div>
  </body>
</html>