{#
 * @file
 * Theme override for article nodes (ice cream style)
 #}
<article class="article-card">
  {% if label %}
    <h2>{{ label }}</h2>
  {% endif %}
  {% if display_submitted %}
    <div class="submitted">
      {{ author_name }} Â· {{ date }}
    </div>
  {% endif %}
  <div class="article-content">
    {{ content.body }}
  </div>
  <div class="links">
    {{ content.links }}
  </div>
</article>
